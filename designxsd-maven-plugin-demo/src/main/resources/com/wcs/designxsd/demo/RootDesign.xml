<?xml version="1.0" encoding="UTF-8"?>
<html
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://design.xsd">
    <head>
        <meta charset="UTF-8" name="package-mapping" content="demo:com.wcs.designxsd.demo"/>
    </head>
    <body>
        <v-horizontal-layout size-full="" spacing="true">
            <v-label>
                Simple text
                <p>Paragraph</p>
                <b>Bold</b>
                <u>Underline</u>
            </v-label>
            <v-label>
                <table style="border-collapse: collapse;" border = "1" cellpadding = "5" cellspacing = "5">
                    <tr>
                        <th colspan = "6" align = "center">time table</th>
                    </tr>
                    <tr>
                        <th rowspan = "6">hours</th>
                        <th>mon</th>
                        <th>tue</th>
                        <th>wed</th>
                        <th>thu</th>
                        <th>fri</th>
                    </tr>
                    <tr>
                        <td>science</td
                        >
                        <td>maths</td>
                        <td>science</td>
                        <td>maths</td>
                        <td>arts</td>
                    </tr>
                    <tr>
                        <td>social</td>
                        <td>history</td>
                        <td>english</td>
                        <td>social</td>
                        <td>sports</td>
                    </tr>
                    <tr>
                        <th colspan = "5" align = "center">lunch</th>
                    </tr>
                    <tr>
                        <td>science</td>
                        <td>maths</td>
                        <td>science</td>
                        <td>maths</td>
                        <td rowspan = "2">project</td>
                    </tr>
                    <tr>
                        <td>social</td>
                        <td>history</td>
                        <td>english</td>
                        <td>social</td>
                    </tr>
                </table> 
            </v-label>
            <v-label>
                <p>
                    Paragraph<b>bold</b>
                    <u>underline</u>
                    <i>italic</i>
                    <a href="https://github.com/kumm/claraxsd-maven-plugin">Read me text</a>
                </p>
                <ul>
                    <li>Coffee</li>
                    <li>Tea</li>
                    <li>Milk</li>
                </ul>
                <ol>
                    <li>First</li>
                    <li>second</li>
                    <li>third</li>
                </ol>
                <dl>
                    <dt>Coffee</dt>
                    <dd>Black hot drink</dd>
                    <dt>Milk</dt>
                    <dd>White cold drink</dd>
                </dl> 
            </v-label>
            <v-horizontal-layout width-full="">
                <v-button _middle="" _expand="1">
                    Left button
                </v-button>
                <v-button _middle="" _right="">
                    Right button
                </v-button>
            </v-horizontal-layout>
            <v-vertical-layout>
                <v-option-group _id="options" multi-select="true">
                    <option item-id="first_id" selected="selected">First option</option>
                    <option item-id="secound_id">Second option</option>
                    <option item-id="third_id">Third option</option>
                </v-option-group>
            </v-vertical-layout>
            <v-table caption="teszt" width="100%">
                <table>
                    <colgroup>
                        <col center=""/>
                        <col property-id="lastName"/>
                    </colgroup>
                    <thead>
                        <tr>
                            <td>First name</td>
                            <td>Last name</td>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td>Footer 1</td>
                            <td>Footer 2</td>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </v-table>
            <v-tree>
                <node text="A">
                    <node text="B"/>
                    <node text="C"/>
                    <node text="D">
                        <node text="E"/>
                        <node text="F"/>
                    </node>
                </node>
            </v-tree>
            <demo-custom-component></demo-custom-component>
        </v-horizontal-layout>
    </body>
</html>