<xs:schema version="1.1"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:import:com.vaadin.ui"
           xmlns:b="urn:clara:base"
           xmlns:r="urn:clara:root"
           elementFormDefault="qualified">
    
    <xs:import schemaLocation="clara.xsd" namespace="urn:clara:root"/>
    <xs:import schemaLocation="clara_base.xsd" namespace="urn:clara:base"/>

    <xs:element name="VerticalLayout">
        <xs:complexType>
            <!-- This would be much better, but breaks attribute level autocomplete in NetBeans -->
            <!-- <xs:sequence>
                <xs:any processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
            -->
            <!-- so we need a group of all components to make NetBeans happy -->
            <xs:group ref="r:AllComponentsGroup" minOccurs="0" maxOccurs="unbounded"/>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="HorizontalLayout">
        <xs:complexType>
            <xs:group ref="r:AllComponentsGroup" minOccurs="0" maxOccurs="unbounded"/>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="CssLayout">
        <xs:complexType>
            <xs:group ref="r:AllComponentsGroup" minOccurs="0" maxOccurs="unbounded"/>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="Button">
        <xs:complexType>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="Label">
        <xs:complexType>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
            <xs:attribute name="value"/>
            <xs:attribute name="contentMode"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="Table">
        <xs:complexType>
            <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
            <xs:attribute name="pageLength"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="DateField">
        <xs:complexType>
            <xs:attributeGroup ref="b:AbstractFieldAttributeGroup"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="Select">
        <xs:complexType>
            <xs:attributeGroup ref="b:AbstractFieldAttributeGroup"/>
            <xs:attribute name="itemCaptionPropertyId"/>
        </xs:complexType>
    </xs:element>

</xs:schema>
