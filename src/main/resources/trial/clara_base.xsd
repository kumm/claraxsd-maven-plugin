<xs:schema version="1.1"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:p="urn:vaadin:parent"
           xmlns:b="urn:clara:base"
           targetNamespace="urn:clara:base"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <xs:import schemaLocation="clara_parent.xsd" namespace="urn:vaadin:parent"/>

    <xs:attributeGroup name="ComponentAttributeGroup">
        <xs:attribute name="id" type="xs:string"/>
        <xs:attribute name="caption" type="xs:string"/>
        <xs:attribute name="enabled" type="xs:boolean"/>
        <xs:attribute name="visible" type="xs:boolean"/>
        <xs:attribute name="readOnly" type="xs:boolean"/>
        <xs:attribute name="styleName" type="xs:string"/>
        <xs:attribute ref="p:componentAlignment"/>
        <xs:attribute ref="p:expandRatio"/>
    </xs:attributeGroup>

    <xs:attributeGroup name="AbstractComponentAttributeGroup">
        <xs:attributeGroup ref="b:ComponentAttributeGroup"/>
        <xs:attribute name="description" type="xs:string"/>
        <xs:attribute name="immediate" type="xs:boolean"/>
        <xs:attribute name="margin" type="xs:string"/>
        <xs:attribute name="spacing" type="xs:boolean"/>
        <xs:attribute name="width" type="xs:string"/>
        <xs:attribute name="height" type="xs:string"/>
        <xs:attribute name="sizeFull" type="xs:string" fixed=""/>
        <xs:attribute name="sizeUndefined" type="xs:string" fixed=""/>
    </xs:attributeGroup>
    
    <xs:attributeGroup name="AbstractFieldAttributeGroup">
        <xs:attributeGroup ref="b:AbstractComponentAttributeGroup"/>
        <xs:attribute name="required" type="xs:boolean"/>
        <xs:attribute name="buffered" type="xs:boolean"/>
        <xs:attribute name="invalidAllowed" type="xs:boolean"/>
        <xs:attribute name="invalidComitted" type="xs:boolean"/>
        <xs:attribute name="requiredError" type="xs:string"/>
        <xs:attribute name="validationVisible" type="xs:boolean"/>
        <xs:attribute name="tabIndex" type="xs:integer"/>
    </xs:attributeGroup>

</xs:schema>
